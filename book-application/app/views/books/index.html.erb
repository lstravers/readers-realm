<h1><center>Welcome to the Library</center></h1>

<h2>Book List</h2>

<%= link_to 'Add a New Book', new_book_path, class: "button" %>
<br>

<%= link_to 'Add a New User', new_user_path, class: "button" %>
<br>

<table class = "table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>URL</th>
    <th>Description</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.url %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Delete', book_path(book), 
                                          method: :delete,
                                          data: {confirm: 'Are you sure? Deleting this book will permanently remove it from the library.'} %></td> 
    </tr>
  <% end %>
</table>

