<h1><center>Welcome to the Library</center></h1>

<h2>Book List</h2>

<%= link_to 'Add a New Book', new_book_path %>
<br>



<table class = "table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>URL</th>
    <th>Description</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.url %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td> 
    </tr>
  <% end %>
</table>

